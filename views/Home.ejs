<style>
  #name{
    font-size: 2rem;
  }
  #name-div{
    margin-top: 8rem;
    text-align: center;
  }
  .btn{
    background-color: rgb(36, 36, 129);
    color: aliceblue;
    font-size: 0.9rem;
    margin-left:0rem;
    margin-right:1.2rem;
    margin-top: 0.9rem;
    width:12rem;
  } 
  #nav-btn{
    background-color: rgb(36, 36, 129);
    color: aliceblue;
    font-size:0.9rem;
    margin-left:0rem;
    margin-right:0rem;
  }
  #buttons-div{
    text-align: center;
  }
  hr{
    height:0.03rem;  
    background-color: lightgray;
    width:70rem;
  }
</style>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Timetable Manager</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item" >
              <a  class="nav-link btn" id="nav-btn" href="/home">Home</a>
            </li>&nbsp;&nbsp;
            <li class="nav-item">
              <a class="nav-link btn" id="nav-btn" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>

      <div id="name-div">
        <p id="name">
            &ldquo;&nbsp;Welcome <%= username %>&nbsp;&rdquo;
        </p>
      </div>
      <hr>
      <div id="buttons-div">
        <div> 
        <a href="/day" class="btn">Day Timetable</a>
        <a href="/week" class="btn">Week Timetable</a>
        <a href="/look" class="btn">Look At Timetable</a>
        <a href="/leave" class="btn">Apply For Leave</a>
      </div>
        <a href="/appliedleaves" class="btn">My Applied Leaves</a>
        <a href="/message" class="btn">Admin Message</a>
      </div>
      
